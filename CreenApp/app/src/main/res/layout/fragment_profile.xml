<?xml version="1.0" encoding="utf-8"?>

<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".FragmentProfile">

    <TextView
        android:id="@+id/profile_username"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="User Name "
        android:textColor="#696969"
        android:textSize="25sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.44" />

    <ScrollView
        android:id="@+id/scrollView3"
        android:layout_width="330dp"
        android:layout_height="260dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/profile_username"
        app:layout_constraintVertical_bias="0.01999998">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:layout_width="300dp"
                android:layout_height="30dp"
                android:text="Email"
                android:textColor="#696969"
                android:textSize="18sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/user_email"
                android:layout_width="300dp"
                android:layout_height="50dp"
                android:text="xyz@gmail.com"
                android:textColor="#696969"
                android:textSize="16sp" />

            <TextView
                android:layout_width="300dp"
                android:layout_height="30dp"
                android:text="Phone"
                android:textSize="18sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/user_number"
                android:layout_width="300dp"
                android:layout_height="50dp"
                android:text="03317289172"
                android:textColor="#696969"
                android:textSize="16sp" />

            <TextView
                android:layout_width="300dp"
                android:layout_height="30dp"
                android:text="Change Password"
                android:textColor="#696969"
                android:textSize="18sp"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/old_password"
                android:layout_width="300dp"
                android:layout_height="40dp"
                android:ems="10"
                android:hint="Old Password"
                android:inputType="textPassword"
                android:textColor="#000000"
                android:textColorHint="#696969" />

            <EditText
                android:id="@+id/new_password"
                android:layout_width="300dp"
                android:layout_height="40dp"
                android:ems="10"
                android:hint="New Password"
                android:inputType="textPassword"
                android:textColor="#000000"
                android:textColorHint="#696969" />

            <Button
                android:id="@+id/changepass"
                android:layout_width="100dp"
                android:layout_height="50dp"
                android:background="@drawable/rounded_border2"
                android:text="Done"
                android:textColor="@color/white"></Button>
            <Button
                android:id="@+id/logout_button"
                android:layout_width="100dp"
                android:layout_height="50dp"
                android:background="@drawable/rounded_border2"
                android:text="Log Out"
                android:textColor="@color/white"></Button>

        </LinearLayout>
    </ScrollView>

    <ImageView
        android:id="@+id/profilebackground"
        android:layout_width="380dp"
        android:layout_height="260dp"
        android:src="@drawable/userprofilebackground"
        app:layout_constraintBottom_toTopOf="@+id/profile_username"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView8"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="70dp"
        android:layout_marginRight="70dp"
        android:layout_marginTop="130dp"
        android:fontFamily="monospace"
        android:text="User Profile"
        android:textColor="@color/white"
        android:textSize="30sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/profilebackground"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toEndOf="@+id/profilebackground"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.41000003" />


</androidx.constraintlayout.widget.ConstraintLayout>
